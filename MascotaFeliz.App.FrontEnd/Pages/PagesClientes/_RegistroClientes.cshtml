@page
@model MascotaFeliz.App.Frontend.Pages._RegistroClientesModel
@{
    ViewData["Title"] = "Registro Clientes";
}

<!DOCTYPE html>
<html lang="en">

<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width; initial-scale=1.0, maximun-scale=1">
    <!--etiqueta diseño adaptable-->
    <meta name="keywords" content="Veterinaria, mascotas, domicilios, perros, gatos, veterinarios" />
    <title>MascotaFeliz</title>
    <script src="uitotop-jquery-plugin.js" type="text/javascript"></script>
    <script src="jquery-3.1.0.min.js" type="text/javascript"> </script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans|Open+sans|Oswald|Prompt|Arimo:400,700,400italic,700italic" />
    <link rel="stylesheet" href="~/css/mascotafeliz.css" type="text/css" media="screen and (min-width: 1025px) and (max-width: 1920px)" />
    <link rel="stylesheet" href="~/css/medium.css" type="text/css" media="screen and (min-width: 721px) and (max-width: 1024px)" />
    <link rel="stylesheet" href="~/css/mini.css" type="text/css" media="screen and (max-width: 720px)" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    

</head>


<body>
    <div>
        <form class="form-register" method="post">
            <h3>REGISTRAR CLIENTE</h3><br>
            <label for="nombre">Nombre:</label><br>
            <input type="text" class="controls" name="nombre" asp-for="Cliente.Nombre" placeholder="Ingresa tu nombre" /><br><br>
            <label for="apellido">Apellido:</label><br>
            <input type="text" class="controls" name="apellido" asp-for="Cliente.Apellido" placeholder="Ingresa tu apellido" /><br><br>
            <label for="direccion">Direccion:</label><br>
            <input type="text" class="controls" name="DireccionCliente" asp-for="Cliente.DireccionCliente" placeholder="Ingresa tu dirección" /><br><br>
            <label for="telefono">Teléfono:</label><br>
            <input type="text" class="controls" name="NumeroTelefono" asp-for="Cliente.NumeroTelefono" placeholder="Ingresa tu teléfono" /><br><br>

            <button class="botons" type="submit">Registrar datos</button>
            <p><a href="#">¿Ya estas registrado?</a></p>
        </form>
        <a asp-page="./List" class="btn-default"> Lista Saludo</a>
          
    </div>
</body>

