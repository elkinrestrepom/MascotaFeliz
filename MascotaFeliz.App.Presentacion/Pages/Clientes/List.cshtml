@page
@model MascotaFeliz.App.Presentacion.Pages.ListModel
@{
    ViewData["Title"] = "Listado Clientes";
}

<td>
    
  <nav class="navbar navbar-light bg-light">
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="Search" placeholder="Ingrese el cliente" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
  </form>
</nav>

</td>

<table class="table">
    
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Dirección</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var client in Model.Clientes)
            {
                <tr>
                    <th @client.idPersona></th>
                    <td>@client.nombres</td>
                    <td>@client.apellidos</td>
                    <td>@client.telefono</td>
                    <td>@client.direccion</td>
                    <td><a class="btn btn-primary table-btn" asp-page="/Clientes/Details">
                    <i class="fas fa-address-book fa-lg"></i>Detalle Cliente</a> 
                    </td>
                    <td><a class="btn btn-primary table-btn" asp-page="./Delete">
                    <i class="fas fa-address-book fa-lg"></i>Eliminar Cliente</a> 
                    </td>
                    <td><a class="btn btn-primary table-btn" asp-page="./Edit">
                    <i class="fas fa-address-book fa-lg"></i>Editar Cliente</a> 
                    </td>
                </tr>    
                
            }
            
        <tr>
        </tbody>          
    
</table>



