@page
@model MascotaFeliz.App.Frontend.Pages.DeleteModel
@{
    ViewData["Title"] = "Eliminar Clientes";
}

<body>
    <div>
        <form class="form-register" method="post">
            <h3>ELIMINAR CLIENTE</h3><br>
            <label asp-for="Cliente.idPersona">Cédula:</label><br>
            <input asp-for="Cliente.idPersona"type="text" class="controls" name="cedula"  placeholder="Ingrese su cédula" /><br><br>
            <label asp-for="Cliente.nombres">Nombre:</label><br>
            <input asp-for="Cliente.nombres"type="text" class="controls" name="nombre"  placeholder="Ingresa tu nombre" /><br><br>
            <label asp-for="Cliente.apellidos">Apellido:</label><br>
            <input asp-for="Cliente.apellidos" type="text" class="controls" name="apellido"  placeholder="Ingresa tu apellido" /><br><br>
            <label asp-for="Cliente.direccion">Dirección:</label><br>
            <input asp-for="Cliente.direccion" type="text" class="controls" name="DireccionCliente"  placeholder="Ingresa tu dirección" /><br><br>
            <label asp-for="Cliente.telefono">Teléfono:</label><br>
            <input asp-for="Cliente.telefono" type="text" class="controls" name="NumeroTelefono"  placeholder="Ingresa tu teléfono" /><br><br>
            <button class="btn btn-info" type="submit" >Eliminar Cliente</button>
        </form>
        <br><br>
        <div class="row">
            <div class="col-6" >
                <a asp-page="../Clientes/List" class="btn btn-success"> Volver</a>
            </div>
        </div> 
    </div>
</body>
